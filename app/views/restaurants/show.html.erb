<h1><%= @restaurant.name %></h1>
<figcaption class="blockquote-footer">
  <p>Cuisine: <%= @restaurant.category.capitalize %></p>
</figcaption>
<h4>Address: <%= @restaurant.address %></h4>
<p>Phone number: <%= @restaurant.phone_number %></p>
<h5>Reviews:</h5>
<% @restaurant.reviews.each do |review| %>
  <ul class="list-unstyled">
    <li> <%= review.content %> - <%= '⭐' * review.rating %></li>
  </ul>
<% end %>
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary"  %>
<%= link_to 'Back', restaurants_path, class: "btn btn-primary"  %>
